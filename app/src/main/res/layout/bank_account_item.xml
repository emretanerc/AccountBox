<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2sdp"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_3sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_5sdp"
            android:background="#31CFCFCF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/banklogo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bankName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:textSize="@dimen/_13sdp"
                android:gravity="bottom"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ibanNumber"
                android:textSize="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:gravity="top"
                android:textColor="#4A4A4A" />
        </LinearLayout>

        <TextView
            android:id="@+id/currency"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/copyBt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:background="#00FFFFFF"
            android:src="@drawable/round_content_copy_20"
            android:textSize="@dimen/_9sdp" />

        <ImageButton
            android:id="@+id/popupBt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:background="#00FFFFFF"
            android:src="@drawable/baseline_more_vert_20"
            android:textSize="@dimen/_9sdp" />
    </LinearLayout>
</LinearLayout>