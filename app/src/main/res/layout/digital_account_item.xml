<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2sdp"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_3sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/websiteLogo"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_5sdp"
            android:background="#31CFCFCF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/banklogo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/websiteName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:textSize="@dimen/_11sdp"
                android:gravity="bottom"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/username"
                android:textSize="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:gravity="top"
                android:textColor="#4A4A4A" />

            <TextView
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:gravity="top"
                android:inputType="textPassword"
                android:textColor="#4A4A4A"
                android:textIsSelectable="true"
                android:textSize="@dimen/_10sdp"
                app:passwordToggleEnabled="true" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/showHideBt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:background="#00FFFFFF"
            android:src="@drawable/baseline_visibility_20" />

        <ImageButton
            android:id="@+id/popupBt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:background="#00FFFFFF"
            android:src="@drawable/baseline_more_vert_20" />
    </LinearLayout>
</LinearLayout>